@page "/confirm-email-required"
@model Agora.Web.Pages.ConfirmEmailRequiredModel

<div class="max-w-sm mx-auto mt-16">
  <div class="text-center mb-8">
    <div class="inline-flex items-center justify-center w-12 h-12 bg-terra rounded-xl mb-4">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v4m0 4h.01M3.055 11a9 9 0 1117.89 0 9 9 0 01-17.89 0z"/></svg>
    </div>
    <h1 class="font-display text-3xl tracking-tight">Confirm your email</h1>
    <p class="text-ink-muted text-sm mt-1">Your account must be confirmed before you can sign in.</p>
  </div>

  <div class="rounded-xl border border-border bg-cream-dark/40 p-4 mb-5">
    <p class="text-xs font-medium text-ink-muted uppercase tracking-wider mb-1">Account</p>
    <p class="text-sm text-ink-light break-all">@Model.Email</p>
  </div>

  <form method="post" class="space-y-3">
    <input type="hidden" name="email" value="@Model.Email" />
    <input type="hidden" name="gate" value="@Model.GateToken" />
    <button type="submit" class="w-full px-4 py-2 bg-ink text-white text-sm font-medium rounded-lg hover:bg-ink/90 transition-colors">Resend confirmation email</button>
  </form>

  <p class="text-sm text-ink-muted mt-6 text-center"><a href="/login" class="text-terra font-medium hover:underline">Back to sign in</a></p>
</div>
