@page "/account/share-defaults"
@model Agora.Web.Pages.Account.ShareDefaultsModel

<section class="mb-8">
  <h2 class="font-display text-3xl tracking-tight">Share defaults</h2>
  <p class="text-ink-muted text-sm mt-1">Set default notification and expiry behavior for newly created shares.</p>
</section>

<section class="mb-10">
  <div class="bg-white rounded-2xl border border-border p-6">
    <h3 class="font-display text-xl mb-4">Default share options</h3>
    <form method="post" class="space-y-4">
      <div>
        <label class="text-xs font-medium text-ink-muted uppercase tracking-wider mb-1.5 block">Default download notifications</label>
        <select name="defaultNotifyMode" class="w-full px-3 py-2 text-sm border border-border rounded-lg bg-cream focus:outline-none focus:border-terra">
          <option value="once" selected="@(Model.DefaultNotifyMode == "once")">First download only</option>
          <option value="every_time" selected="@(Model.DefaultNotifyMode == "every_time")">Every download</option>
          <option value="none" selected="@(Model.DefaultNotifyMode == "none")">None</option>
        </select>
      </div>
      <div>
        <label class="text-xs font-medium text-ink-muted uppercase tracking-wider mb-1.5 block">Default expiry mode</label>
        <select name="defaultExpiryMode" class="w-full px-3 py-2 text-sm border border-border rounded-lg bg-cream focus:outline-none focus:border-terra">
          <option value="1_hour" selected="@(Model.DefaultExpiryMode == "1_hour")">1 hour</option>
          <option value="24_hours" selected="@(Model.DefaultExpiryMode == "24_hours")">24 hours</option>
          <option value="7_days" selected="@(Model.DefaultExpiryMode == "7_days")">7 days</option>
          <option value="30_days" selected="@(Model.DefaultExpiryMode == "30_days")">30 days</option>
          <option value="1_year" selected="@(Model.DefaultExpiryMode == "1_year")">1 year</option>
          <option value="indefinite" selected="@(Model.DefaultExpiryMode == "indefinite")">Indefinite</option>
        </select>
      </div>
      <div class="flex justify-end">
        <button type="submit" class="px-6 py-2.5 bg-ink text-white text-sm font-medium rounded-lg hover:bg-ink/80 transition-colors">Save share defaults</button>
      </div>
    </form>
  </div>
</section>
