{
  "ConnectionStrings": {
    "Default": "Data Source=agora.db"
  },
  "Agora": {
    "PublicBaseUrl": "",
    "StorageRoot": "storage",
    "MaxFilesPerShare": 20,
    "MaxFileSizeBytes": 5368709120,
    "MaxTotalUploadBytes": 10737418240,
    "DownloadEventRetentionDays": 90,
    "ZombieUploadRetentionHours": 24
  },
  "Email": {
    "Provider": "resend",
    "Resend": {
      "ApiToken": "",
      "ApiUrl": "https://api.resend.com",
      "FromDisplayName": "",
      "FromAddress": "no-reply@example.com"
    },
    "FileSystem": {
      "OutputDirectory": "emails"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/agora-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
